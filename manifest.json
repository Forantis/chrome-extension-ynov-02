{
    "manifest_version": 3,
    "name": "Video Bookmarker",
    "description": "Bookmark your favorite videos from youtube",
    "version": "0.2.0",
    "action": {
      "default_popup": "views/popup.html",
      "default_icon": "images/icon.png",
      "default_title": "save video bookmark"
    },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [ 
    "storage",
    "activeTab",
    "scripting" 
  ]
  }