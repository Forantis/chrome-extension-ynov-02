{
    "manifest_version": 3,
    "name": "Video Bookmarker",
    "description": "Bookmark your favorite videos from youtube",
    "version": "0.1.0",
    "action": {
      "default_popup": "views/popup.html",
      "default_icon": "images/icon.png"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "scripts/popup.js" ]
    }
  ],
  "permissions": [ 
    "storage",
    "activeTab",
    "scripting" 
  ]
  }